options:
  autohint: false
  hinting: false
  hintstyle: hintnone
  lcdfilter: lcddefault
  rgba: rgb
features:
  # Some fonts don't play well with FRAC (Maple Mono)
  - FRAC
  - THND
  - TXTR
roles:
  emoji:
    - Symbols Nerd Font Mono
    - Symbols Nerd Font
    - NanumGothicCoding
    # https://github.com/tetunori/fluent-emoji-webfont :
    - Fluent Emoji Color
    - Fluent Emoji Flat
    - Twemoji
    - Twitter Color Emoji
    - SerenityOS Emoji
    - OpenMoji Color
    - JoyPixels
  monospace:
    - Andysevka Term
    - 0xProto

    # - 0xProto Nerd Font
    # 0xProto Nerd Font has annoyingly sized nerd symbols
    # when used as a fallback for other fonts

    - Sudo
    - Maple Mono
    - Fantasque Sans Mono
    - Ubuntu Mono

    # The rest have noticeably worse character coverage:

    # - LXGW WenKai Mono TC
    # LXGW has trouble with some symbols maybe, like ellipsis

    - Comic Mono
    - Share Tech Mono
    - Atkinson Hyperlegible Mono
    - Spleen 32x64
  sans-serif:
    - Andysevka QP
    - Kermit
    - Sudo UI
    - Cadman
    - Andika
    - 0xPropo
    # where should 0xpropo go?
    - Ubuntu
    - Baloo 2 Medium
    - Barlow Medium
    - Lexend
    # TODO: bump lexend up, probably
    - LXGW WenKai TC
    # TODO: maybe bump up LXGW
    - Suse
    # TODO: maybe bump up Suse

    # -- The rest have noticeably worse character coverage --
    - Convergence
    - Winky Sans
    - Ruluko
    - Blogger Sans
    - Atkinson Hyperlegible
    - PT Sans
    - Inclusive Sans
    - Capriola
    - Reforma 2018
    # TODO: maybe bump up reforma
    - Atkinson Hyperlegible Next
    - Atkinson Hyperlegible
  serif:
    # test words: DEPENDENCIES bikes
    - Typey McTypeface
    - Kelvinch
    - Alegreya
    - Andada Pro
    - Fraunces
    - Enriqueta
    - Quando
    - Caladea
    - Newsreader 16pt
    - YoungSerif
    - Libre Baskerville
    - Redaction
    - Charis SIL
    # TODO: bump redaction and charis up, probably
    # Great in small amounts, tiresome for extended content:
    # - Milonga
    # The rest have noticeably worse character coverage:
    - Namdhinggo
    - Annapurna SIL
    - Alice
    - Brawler
    - Averia Serif
